---
import Layout from '@/layouts/Layout.astro';
import { ViewTransitions } from 'astro:transitions';
import image from "@/projects/1 The Importance of Touch/1 first image.webp"
import image2 from "@/projects/1 The Importance of Touch/2 second image.webp"
import { Image } from 'astro:assets';

const images = [1, 2, 3, 4, 5]
---

<Layout>
  <ViewTransitions />
  <h1 transition:name="tiot" class="text-5xl mb-8 md:mb-12 leading-tight">The importance of touch</h1>

  <div class="grid md:grid-cols-2 masonry gap-4 md:gap-8">
    <div class="flex flex-col gap-4 md:gap-8">
      <Image transition:name="main-image" src={image} alt="The Importance of Touch" width="500" height="250" />
      {images.map((x) => 
        <Image src={image2} alt="The Importance of Touch" width="500" height="250" />
      )}
    </div>
  </div>
</Layout>
