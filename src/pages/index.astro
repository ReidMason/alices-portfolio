---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

let projects = await getCollection("project");
---

<Layout title="Alice Collins">
  <main class="flex flex-col w-full items-center">
    <ul class="grid md:grid-cols-2 gap-24 w-full">
      {
        projects.map((project) => (
          <li>
            <a href={`/project/${project.slug}`} class="group">
              <div class="relative pb-[75%] w-full">
                <img
                  src={project.data.mainImage}
                  class="object-cover absolute group-hover:opacity-90 w-full h-full transition-opacity duration-200"
                />
              </div>
              <p class="mt-3 text-xl">{project.data.title}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
