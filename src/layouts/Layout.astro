--- 
import Navbar from "../components/Navbar.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Alice Collin's portfolio" />
    <title>{title}</title>
  </head>
  <body class="m-4 md:m-20 mt-8 md:mt-16 md:overflow-auto" id="body">
    <Navbar />
    <slot />
  </body>

  <style is:global>
    @font-face {
      font-family: "Antic-Didone";
      src: url("/fonts/AnticDidone-Regular.ttf");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }
  </style>
</html>
