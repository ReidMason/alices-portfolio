---
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";

let projects = await getCollection("project");
---

<Layout title="Welcome to Astro.">
  <main class="flex flex-col w-full items-center">
    <ul class="grid md:grid-cols-2 gap-24 w-full">
      {
        projects.map((project) => (
          <li class="max-h-[562px]">
            <a href={`/project/${project.slug}`} class="group">
              <img
                src={project.data.mainImage}
                class="object-cover w-full h-full group-hover:opacity-90 transition-opacity duration-200"
              />
              <p class="mt-3 text-xl">{project.data.title}</p>
            </a>
          </li>
        ))
      }
    </ul>
  </main>
</Layout>
